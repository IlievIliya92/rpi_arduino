server {
    # Make site accessible from http://localhost/
    server_name localhost;
    root /var/www;
    index index_main.html;

    location = / {
        try_files /html/index.html = 404;
    }

    location /backend {
#        rewrite /(.+$) /html/$1 break;
        try_files $uri @extensionless-py;
    }

    location @extensionless-py {
 #       rewrite ^(/.*)\.py(\?.*)?$ /$1$2 permanent;
        include /etc/nginx/uwsgi_params;
        uwsgi_pass unix:/var/www/backend/server_app.socket;
    }
}
